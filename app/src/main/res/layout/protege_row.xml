<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/listProfilePicture"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_weight="0.4"
        app:srcCompat="@android:drawable/btn_star_big_on" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/listNickTV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/addPerson"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/basic_photo" />

            <ImageView
                android:id="@+id/removePerson"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_weight="0.1"
                app:srcCompat="@drawable/baseline_remove_circle_black_48"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1">

            <ImageView
                android:id="@+id/protegeWorkout"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_baseline_fitness_center_24"
                app:tint="@color/black" />

            <ImageView
                android:id="@+id/protegeDiet"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/diet_icon"
                app:tint="@color/black" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
